{{!-- Item Accordion Template --}}
<div class="item accordion-item" data-item-id="{{item._id}}">
    <div class="item-header-row">
        <div class="item-image {{#if rollable}}rollable{{/if}}" 
             {{#if rollable}}data-rolltype="{{rolltype}}" data-itemid="{{item.id}}" data-fertigkeit="{{fertigkeit}}"{{/if}}>
            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
        </div>
        <div class="item-name accordion-header">
            <div class="name-label">{{nameLabel}}<i class="fas fa-chevron-down"></i></div>
            <h3>{{item.name}}</h3>
        </div>
        {{#if stats}}
        <div class="item-stats accordion-header">
            {{#each stats}}
            <h4{{#if (lookup ../statsTooltips @index)}} data-tooltip="{{lookup ../statsTooltips @index}}"{{/if}}>{{this}}</h4>
            {{/each}}
        </div>
        {{/if}}
        {{#if stats2}}
        <div class="item-stats accordion-header">
            {{#each stats2}}
            <h4{{#if (lookup ../stats2Tooltips @index)}} data-tooltip="{{lookup ../stats2Tooltips @index}}"{{/if}}>{{this}}</h4>
            {{/each}}
        </div>
        {{/if}}
    </div>
    <div class="accordion-content">
        <div class="item-controls">
            {{#if isWeapon}}
            <a class="item-toggle {{item.system.hauptwaffe}}" data-itemid="{{item.id}}"
                data-toggletype="hauptwaffe">
                <span>HW</span>
            </a>
            <a class="item-toggle {{item.system.nebenwaffe}}" data-itemid="{{item.id}}"
                data-toggletype="nebenwaffe">
                <span>NW</span>
            </a>
            {{/if}}
            <a class="item-control item-edit" data-itemclass="{{itemclass}}" data-itemid="{{item._id}}" title="{{editTitle}}">
                <i class="fas fa-edit ilaris-button-icon"></i>
            </a>
            <a class="item-control item-delete" data-itemclass="{{itemclass}}" data-itemid="{{item._id}}" title="{{deleteTitle}}">
                <i class="fas fa-trash ilaris-button-icon"></i>
            </a>
        </div>
        <div class="item-details">
            {{#each details}}
            {{#unless (eq this.value null)}}
            {{#unless (eq this.value undefined)}}
            {{#unless (eq this.value "")}}
            <div class="detail-row {{#if this.isDescription}}description{{/if}}">
                <span class="detail-label">{{this.label}}</span>
                <span class="detail-value">{{{this.value}}}</span>
            </div>
            {{/unless}}
            {{/unless}}
            {{/unless}}
            {{/each}}
        </div>
    </div>
</div>