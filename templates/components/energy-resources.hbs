{{!-- Energy Resources - Slider-style bars --}}
{{#if (and actor.system.abgeleitete.zauberer actor.system.abgeleitete.geweihter)}}
    {{!-- Both AsP and KaP available --}}
    <div class="energy-bar">
        <label class="energy-label">AsP</label>
        <div class="energy-progress">
            <div class="energy-fill asp-fill" style="width: {{percentage actor.system.abgeleitete.asp_stern actor.system.abgeleitete.asp}}%"></div>
            <div class="energy-text">
                {{actor.system.abgeleitete.asp_stern}} / {{actor.system.abgeleitete.asp}}{{#if actor.system.abgeleitete.gasp}} ({{actor.system.abgeleitete.gasp}}){{/if}} AsP
                <a class="energy-settings" data-energy-type="asp" title="AsP/gAsP bearbeiten"><i class="fas fa-cog"></i></a>
            </div>
        </div>
    </div>
    <div class="energy-bar">
        <label class="energy-label">KaP</label>
        <div class="energy-progress">
            <div class="energy-fill kap-fill" style="width: {{percentage actor.system.abgeleitete.kap_stern actor.system.abgeleitete.kap}}%"></div>
            <div class="energy-text">
                {{actor.system.abgeleitete.kap_stern}} / {{actor.system.abgeleitete.kap}}{{#if actor.system.abgeleitete.gkap}} ({{actor.system.abgeleitete.gkap}}){{/if}} KaP
                <a class="energy-settings" data-energy-type="kap" title="KaP/gKaP bearbeiten"><i class="fas fa-cog"></i></a>
            </div>
        </div>
    </div>
{{else if actor.system.abgeleitete.zauberer}}
    {{!-- Only AsP available --}}
    <div class="energy-bar">
        <label class="energy-label">Eng</label>
        <div class="energy-progress">
            <div class="energy-fill asp-fill" style="width: {{percentage actor.system.abgeleitete.asp_stern actor.system.abgeleitete.asp}}%"></div>
            <div class="energy-text">
                {{actor.system.abgeleitete.asp_stern}} / {{actor.system.abgeleitete.asp}}{{#if actor.system.abgeleitete.gasp}} ({{actor.system.abgeleitete.gasp}}){{/if}} Eng
                <a class="energy-settings" data-energy-type="asp" title="Eng/gEng bearbeiten"><i class="fas fa-cog"></i></a>
            </div>
        </div>
    </div>
{{else if actor.system.abgeleitete.geweihter}}
    {{!-- Only KaP available --}}
    <div class="energy-bar">
        <label class="energy-label">Eng</label>
        <div class="energy-progress">
            <div class="energy-fill kap-fill" style="width: {{percentage actor.system.abgeleitete.kap_stern actor.system.abgeleitete.kap}}%"></div>
            <div class="energy-text">
                {{actor.system.abgeleitete.kap_stern}} / {{actor.system.abgeleitete.kap}}{{#if actor.system.abgeleitete.gkap}} ({{actor.system.abgeleitete.gkap}}){{/if}} Eng
                <a class="energy-settings" data-energy-type="kap" title="Eng/gEng bearbeiten"><i class="fas fa-cog"></i></a>
            </div>
        </div>
    </div>
{{!-- If no energy available, show nothing --}}
{{/if}}