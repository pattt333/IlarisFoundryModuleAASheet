<form class="{{cssClass}} flexcol" autocomplete="off">
    
    {{!-- Sheet Header - Tidy 5e inspired layout --}}
    <header class="sheet-header sticky-header">
        {{!-- Left side: Actor portrait with einschr채nkungen and energy below --}}
            <div class="actor-profile">
                <div class="portrait-container">
                    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="120" width="120"/>
                </div>
                {{!-- Energy bars below einschr채nkungen --}}
                <div class="profile-energy">
                    {{> modules/ilaris-alternative-actor-sheet/templates/sheets/energy-resources.hbs}}
                </div>                
                {{!-- Einschr채nkungen grid directly below portrait --}}
                <div class="profile-einschraenkungen">
                    {{> modules/ilaris-alternative-actor-sheet/templates/sheets/health-resources.hbs}}
                </div>
            </div>
            
            {{!-- Right side: Name and stats --}}
            <div class="header-details">
                <div class="name-section">
                    <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
                </div>
                
                {{!-- All Secondary Stats in One Row --}}
                <div class="secondary-stats flex-row">
                    <div class="stat flex-group-center">
                        <label class="stat-label">WS</label>
                        <div class="stat-values">
                            <span class="stat-value">{{system.abgeleitete.ws}}</span>
                            <span class="stat-derived">({{system.abgeleitete.ws_stern}}*)</span>
                        </div>
                    </div>
                    <div class="stat flex-group-center">
                        <label class="stat-label">MR</label>
                        <span class="stat-value">{{system.abgeleitete.mr}}</span>
                    </div>
                    <div class="stat flex-group-center">
                        <label class="stat-label">GS</label>
                        <span class="stat-value">{{system.abgeleitete.gs}}</span>
                    </div>
                    <div class="stat flex-group-center">
                        <label class="stat-label">INI</label>
                        <span class="stat-value">{{system.abgeleitete.ini}}</span>
                    </div>
                    <div class="stat flex-group-center">
                        <label class="stat-label">BE</label>
                        <span class="stat-value">{{system.abgeleitete.be}}</span>
                    </div>
                    <div class="stat flex-group-center">
                        <label class="stat-label">Glob. Mod</label>
                        <span class="stat-value">{{system.abgeleitete.globalermod}}</span>
                    </div>
                </div>
            </div>
    </header>

    {{!-- Sheet Tab Navigation - Also sticky --}}
    <nav class="sheet-tabs tabs sticky-tabs" data-group="primary">
        <a class="item" data-tab="main">Haupt</a>
        <a class="item" data-tab="skills">Fertigkeiten</a>
        <a class="item" data-tab="items">Gegenst채nde</a>
        <a class="item" data-tab="spells">Zauber</a>
        <a class="item" data-tab="biography">Biographie</a>
    </nav>

    {{!-- Sheet Body - Scrollable content --}}
    <section class="sheet-body scrollable-content">

        {{> modules/ilaris-alternative-actor-sheet/templates/sheets/tabs/main-tab.hbs}}

        {{> modules/ilaris-alternative-actor-sheet/templates/sheets/tabs/skills-tab.hbs}}

        {{> modules/ilaris-alternative-actor-sheet/templates/sheets/tabs/items-tab.hbs}}

        {{> modules/ilaris-alternative-actor-sheet/templates/sheets/tabs/spells-tab.hbs}}

        {{> modules/ilaris-alternative-actor-sheet/templates/sheets/tabs/biography-tab.hbs}}

    </section>
</form>