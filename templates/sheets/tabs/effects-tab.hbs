{{!-- Effects Tab --}}
<div class="tab effects" data-group="primary" data-tab="effects">
    <div class="flexcol">
        {{!-- Active Effects Section --}}
        <div class="items-section">
            <div class="items-header">
                <h3>Aktive Effekte</h3>
                <div class="item-controls">
                    {{#if canAdvanceTime}}
                    <a class="item-control effect-advance-time" title="Zeit vorrücken"><i class="fas fa-stopwatch"></i> Zeit vorrücken</a>
                    {{/if}}
                    <a class="item-control effect-library-open" title="Öffne Effekt Bibliothek" data-pack="ilaris-alternative-actor-sheet.effect-library"><i class="fas fa-book"></i> Effekt Bibliothek</a>
                </div>
            </div>
            <div class="effects-grid">
                {{#each actor.appliedEffects as |effect|}}
                {{> "modules/ilaris-alternative-actor-sheet/templates/components/effect-card.hbs" 
                    effect=effect
                }}
                {{else}}
                <div class="effects-empty">
                    <p>Keine aktiven Effekte</p>
                    <small>Füge Effekte hinzu, um sie hier zu sehen.</small>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
