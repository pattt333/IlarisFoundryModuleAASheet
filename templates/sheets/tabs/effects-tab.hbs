{{!-- Effects Tab --}}
<div class="tab effects" data-group="primary" data-tab="effects">
    <div class="flexcol">
        {{!-- Active Effects Section --}}
        <div class="items-section">
            <div class="items-header">
                <h3>Aktive Effekte</h3>
                <div class="item-controls">
                    <a class="item-control item-create" title="Effekt erstellen" data-type="effect"><i class="fas fa-plus"></i> Effekt hinzufügen</a>
                </div>
            </div>
            <div class="effects-grid">
                {{#each actor.effects as |effect|}}
                {{> "modules/ilaris-alternative-actor-sheet/templates/components/effect-card.hbs" 
                    effect=effect
                }}
                {{else}}
                <div class="effects-empty">
                    <p>Keine aktiven Effekte</p>
                    <small>Füge Effekte hinzu, um sie hier zu sehen.</small>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
