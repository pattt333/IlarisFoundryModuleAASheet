{{!-- Items Tab --}}
<div class="tab items" data-group="primary" data-tab="items">
    <div class="flexcol">
          {{!-- Weapons Section --}}
        <div class="items-section">
            <div class="items-header">
                <h3>Waffen</h3>
                <div class="item-controls">
                    <a class="item-control item-create" title="Waffe erstellen" data-type="nahkampfwaffe"><i class="fas fa-plus"></i> Waffe hinzufügen</a>
                </div>
            </div>
            <ol class="items-list">
                {{#each actor.nahkampfwaffen as |item id|}}
                <li class="item flexrow" data-item-id="{{item._id}}">
                    <div class="item-name">
                        <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                        <h4>{{item.name}}</h4>
                    </div>
                    <div class="item-controls">
                        <a class="item-control item-edit" title="Waffe bearbeiten"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-delete" title="Waffe löschen"><i class="fas fa-trash"></i></a>
                    </div>
                </li>
                {{/each}}
            </ol>
        </div>

        {{!-- Equipment Section --}}
        <div class="items-section">
            <div class="items-header">
                <h3>Ausrüstung</h3>
                <div class="item-controls">
                    <a class="item-control item-create" title="Gegenstand erstellen" data-type="gegenstand"><i class="fas fa-plus"></i> Gegenstand hinzufügen</a>
                </div>
            </div>
            <ol class="items-list">
                {{#each gegenstaende as |item id|}}
                <li class="item flexrow" data-item-id="{{item._id}}">
                    <div class="item-name">
                        <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                        <h4>{{item.name}}</h4>
                    </div>
                    <div class="item-controls">
                        <a class="item-control item-edit" title="Gegenstand bearbeiten"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-delete" title="Gegenstand löschen"><i class="fas fa-trash"></i></a>
                    </div>
                </li>
                {{/each}}
            </ol>
        </div>
    </div>
</div>
