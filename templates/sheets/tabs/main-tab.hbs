{{!-- Main Tab --}}
<div class="tab main" data-group="primary" data-tab="main">
    {{!-- Top-level character information. --}}
    <div class="grid grid-2col">        <div class="abilities">
            <h3>Attribute</h3>
            {{#each actor.system.attribute as |attribute key|}}            <div class="ability flexrow flex-group-center">
                <label for="system.attribute.{{key}}.wert" class="resource-label">{{key}}</label>
                <input type="number" name="system.attribute.{{key}}.wert" value="{{attribute.wert}}" data-dtype="Number"/>
                <span>{{attribute.pw}}</span>
            </div>
            {{/each}}
        </div>
          <div class="derived-values">
            <h3>Abgeleitete Werte</h3>
            <div class="resource flex-group-center">
                <label class="resource-label">Initiative</label>
                <span class="ability-mod">{{system.abgeleitete.ini.value}}</span>
            </div>
            <div class="resource flex-group-center">
                <label class="resource-label">Geschwindigkeit</label>
                <span class="ability-mod">{{system.abgeleitete.geschwindigkeit.value}}</span>
            </div>
        </div>
    </div>
</div>
