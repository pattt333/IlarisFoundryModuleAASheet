{{!-- Spells Tab --}}
<div class="tab spells" data-group="primary" data-tab="spells">
    <div class="flexcol">        <div class="items-header">
            <div class="item-name">Zaubername</div>
            <div class="item-controls">
                <a class="item-control item-create" title="Zauber erstellen" data-type="zauber"><i class="fas fa-plus"></i> Zauber hinzufügen</a>
            </div>
        </div>
        
        <ol class="items-list">
            {{#each actor.uebernatuerlich.zauber as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
                <div class="item-name rollable" data-rolltype="magie_diag" data-itemid="{{item.id}}">
                    <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class="item-controls">
                    <a class="item-control item-edit" title="Zauber bearbeiten"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete" title="Zauber löschen"><i class="fas fa-trash"></i></a>
                </div>
            </li>
            {{/each}}
            {{#each actor.uebernatuerlich.liturgien as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
                <div class="item-name rollable" data-rolltype="karma_diag" data-itemid="{{item.id}}">
                    <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class="item-controls">
                    <a class="item-control item-edit" title="Zauber bearbeiten"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete" title="Zauber löschen"><i class="fas fa-trash"></i></a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
</div>
