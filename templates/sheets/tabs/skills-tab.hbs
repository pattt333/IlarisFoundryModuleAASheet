{{!-- Skills Tab --}}
<div class="tab skills" data-group="primary" data-tab="skills">
    <div class="flexcol">        {{!-- Skills header --}}
        <div class="items-header">
            <div class="item-name">Fertigkeitsname</div>
            <div class="item-controls">
                <a class="item-control item-create" title="Fertigkeit erstellen" data-type="fertigkeit"><i class="fas fa-plus"></i> Fertigkeit hinzufügen</a>
            </div>
        </div>
        
        {{!-- Skills list --}}
        <ol class="items-list">
            {{#each fertigkeiten as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
                <div class="item-name">
                    <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class="item-controls">
                    <a class="item-control item-edit" title="Fertigkeit bearbeiten"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete" title="Fertigkeit löschen"><i class="fas fa-trash"></i></a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
</div>
