{{!-- Skills Tab --}}
<div class="tab skills" data-group="primary" data-tab="skills">
    <div class="flexcol">
        {{!-- Skills Section --}}
        <div class="items-section">
            <div class="items-header">
                <h3>Fertigkeiten</h3>
                <div class="item-controls">
                    <a class="item-control item-create" title="Fertigkeit erstellen" data-type="fertigkeit"><i class="fas fa-plus"></i> Fertigkeit hinzufügen</a>
                </div>
            </div>
            <div class="items-list">
                {{#each actor.profan.fertigkeiten as |item id|}}
                {{> "modules/ilaris-alternative-actor-sheet/templates/components/item-accordion.hbs" 
                    item=item 
                    rollable=true 
                    rolltype="fertigkeit_diag"
                    fertigkeit=id
                    nameLabel="Fertigkeit"
                    stats=(array (concat "PW " item.system.pw) (concat "PWT " item.system.pwt))
                    stats2=(array (concat item.system.attribut_0 " / " item.system.attribut_1 " / " item.system.attribut_2))
                    itemclass="fertigkeit"
                    editTitle="Fertigkeit bearbeiten"
                    deleteTitle="Fertigkeit löschen"
                    details=(array 
                        (hash label="Talente" value=(itemNames item.system.talente) isDescription=true)
                        (hash label="Beschreibung" value=item.system.text isDescription=true)
                    )
                }}
                {{/each}}
            </div>
        </div>

        {{!-- General Advantages Section --}}
        <div class="items-section">
            <div class="items-header">
                <h3>Allgemeine Vorteile</h3>
                <div class="item-controls">
                    <a class="item-control item-create" title="Vorteil erstellen" data-type="vorteil"><i class="fas fa-plus"></i> Vorteil hinzufügen</a>
                </div>
            </div>
            <div class="items-list">
                {{#each actor.vorteil.allgemein as |item id|}}
                {{> "modules/ilaris-alternative-actor-sheet/templates/components/item-accordion.hbs" 
                    item=item 
                    rollable=false
                    nameLabel="Vorteil"
                    isWeapon=false
                    itemclass="vorteil"
                    editTitle="Vorteil bearbeiten"
                    deleteTitle="Vorteil löschen"
                    details=(array 
                        (hash label="Beschreibung" value=item.system.text isDescription=true)
                    )
                }}
                {{/each}}
            </div>
        </div>

        {{!-- Profane Advantages Section --}}
        <div class="items-section">
            <div class="items-header">
                <h3>Profane Vorteile</h3>
                <div class="item-controls">
                    <a class="item-control item-create" title="Vorteil erstellen" data-type="vorteil"><i class="fas fa-plus"></i> Vorteil hinzufügen</a>
                </div>
            </div>
            <div class="items-list">
                {{#each actor.vorteil.profan as |item id|}}
                {{> "modules/ilaris-alternative-actor-sheet/templates/components/item-accordion.hbs" 
                    item=item 
                    rollable=false
                    nameLabel="Vorteil"
                    isWeapon=false
                    itemclass="vorteil"
                    editTitle="Vorteil bearbeiten"
                    deleteTitle="Vorteil löschen"
                    details=(array 
                        (hash label="Beschreibung" value=item.system.text isDescription=true)
                    )
                }}
                {{/each}}
            </div>
        </div>
    </div>
</div>
