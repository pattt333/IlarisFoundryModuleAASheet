{{!-- Creature Allgemein Tab - General information --}}
<div class="tab allgemein-tab" data-group="primary" data-tab="allgemein">
    
    {{!-- Section A: Kurzbeschreibung --}}
    <section class="creature-section description-section">
        <div class="section-header">
            <h3><i class="fas fa-scroll"></i> Beschreibung</h3>
        </div>
        <div class="kurzbeschreibung-container">
            <textarea name="system.kurzbeschreibung" rows="3" placeholder="Kurzbeschreibung der Kreatur...">{{actor.system.kurzbeschreibung}}</textarea>
        </div>
    </section>

    {{!-- Section B: Eigenschaften --}}
    {{#if actor.eigenschaften.length}}
    <section class="creature-section eigenschaften-section">
        <div class="eigenschaften statblockreihe">
            <b><i class="fas fa-star"></i> Eigenschaften: </b>
            {{#each actor.eigenschaften as |eigenschaft|}}
                <span class="item-entry">
                    <a class="item-edit" data-itemid="{{eigenschaft._id}}">{{eigenschaft.name}}</a>{{#unless @last}}, {{/unless}}
                </span>
            {{/each}}
        </div>
    </section>
    {{/if}}

    {{!-- Section C: Vorteile (All Categories) --}}
    {{#if (or actor.vorteil.allgemein.length actor.vorteil.profan.length actor.vorteil.kampf.length actor.vorteil.kampfstil.length actor.vorteil.magie.length actor.vorteil.zaubertraditionen.length actor.vorteil.karma.length actor.vorteil.geweihtentradition.length actor.vorteil.tiergeist.length)}}
    <section class="creature-section vorteile-section">
        <div class="vorteile statblockreihe">
            <b><i class="fas fa-award"></i> Vorteile: </b>
            {{#each actor.vorteil.allgemein as |vorteil|}}
                <span class="item-entry">
                    <a class="item-edit" data-itemid="{{vorteil._id}}">{{vorteil.name}}</a>, 
                </span>
            {{/each}}
            {{#each actor.vorteil.profan as |vorteil|}}
                <span class="item-entry">
                    <a class="item-edit" data-itemid="{{vorteil._id}}">{{vorteil.name}}</a>, 
                </span>
            {{/each}}
            {{#each actor.vorteil.kampf as |vorteil|}}
                <span class="item-entry">
                    <a class="item-edit" data-itemid="{{vorteil._id}}">{{vorteil.name}}</a>, 
                </span>
            {{/each}}
            {{#each actor.vorteil.kampfstil as |vorteil|}}
                <span class="item-entry">
                    <a class="item-edit" data-itemid="{{vorteil._id}}">{{vorteil.name}}</a>, 
                </span>
            {{/each}}
            {{#each actor.vorteil.magie as |vorteil|}}
                <span class="item-entry">
                    <a class="item-edit" data-itemid="{{vorteil._id}}">{{vorteil.name}}</a>, 
                </span>
            {{/each}}
            {{#each actor.vorteil.zaubertraditionen as |vorteil|}}
                <span class="item-entry">
                    <a class="item-edit" data-itemid="{{vorteil._id}}">{{vorteil.name}}</a>, 
                </span>
            {{/each}}
            {{#each actor.vorteil.karma as |vorteil|}}
                <span class="item-entry">
                    <a class="item-edit" data-itemid="{{vorteil._id}}">{{vorteil.name}}</a>, 
                </span>
            {{/each}}
            {{#each actor.vorteil.geweihtentradition as |vorteil|}}
                <span class="item-entry">
                    <a class="item-edit" data-itemid="{{vorteil._id}}">{{vorteil.name}}</a>, 
                </span>
            {{/each}}
            {{#each actor.vorteil.tiergeist as |vorteil|}}
                <span class="item-entry">
                    <a class="item-edit" data-itemid="{{vorteil._id}}">{{vorteil.name}}</a>, 
                </span>
            {{/each}}
        </div>
    </section>
    {{/if}}

    {{!-- Section D: Fertigkeiten --}}
    {{#if actor.freietalente.length}}
    <section class="creature-section fertigkeiten-section">
        <div class="fertigkeiten statblockreihe">
            <b><i class="fas fa-book"></i> Fertigkeiten: </b>
            {{#each actor.freietalente as |fertigkeit|}}
                <span class="skill-entry">
                    <a class="item-edit" data-itemid="{{fertigkeit._id}}">{{fertigkeit.name}}</a> ({{fertigkeit.system.pw}}
                    <a class="rollable icon-small" data-rolltype="fertigkeit_diag" data-probetype="simple" data-fertigkeit="{{fertigkeit.name}}" data-pw="{{fertigkeit.system.pw}}" title="Fertigkeit w端rfeln">
                        <i class="fas fa-dice-d20"></i>
                    </a>){{#unless @last}}, {{/unless}}
                </span>
            {{/each}}
        </div>
    </section>
    {{/if}}

    {{!-- Section E: Kampfwerte (Input Fields) --}}
    {{#if actor.system.kampfwerte}}
    <section class="creature-section kampfwerte-section">
        <div class="section-header">
            <h3><i class="fas fa-shield-alt"></i> Kampfwerte</h3>
        </div>
        <div class="kampfwerte-grid">
            {{#each actor.system.kampfwerte as |wert key|}}
                <div class="kampfwert-input">
                    <label>{{uppercase key}}</label>
                    <input name="system.kampfwerte.{{key}}" type="text" value="{{wert}}" data-dtype="Number">
                </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    {{!-- Section F: Item-Hinzuf端gen Controls --}}
    <section class="creature-section item-add-section">
        <div class="section-header">
            <h3><i class="fas fa-plus-circle"></i> Item hinzuf端gen</h3>
        </div>
        <div class="item-controls">
            <div class="form-group flexrow">
                <select name="system.additemtype" class="item-type-select">
                    {{selectOptions kreaturItemOptions selected=actor.system.additemtype}}
                </select>
                <button class="item-create" data-itemclass="{{actor.system.additemtype}}" type="button">
                    <i class="fas fa-plus"></i> Hinzuf端gen
                </button>
            </div>
        </div>
    </section>

</div>
